<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm ="clr-namespace:CCExchange.ViewModels"
                    xmlns:view="clr-namespace:CCExchange.Views">

    <DataTemplate DataType="{x:Type vm:TopCurrencyVM}">
        <view:TopCurrencyView DataContext="{Binding}"/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:DetailInfoVM}">
        <view:DetailInfoView DataContext="{Binding}"/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:CurrencyInfoVM}">
        <view:CurrencyInfo DataContext="{Binding}"/>
    </DataTemplate>

</ResourceDictionary>